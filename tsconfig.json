{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/tests/*"
  ],
}
